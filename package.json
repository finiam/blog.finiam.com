{
  "browserslist": ">2%, not dead",
  "scripts": {
    "predev": "npm run clean",
    "dev": "NODE_ENV=development snowpack dev",
    "build": "NODE_ENV=production snowpack build",
    "postbuild": "yarn optimize-fonts",
    "clean": "rm -rf build _output _cache",
    "optimize-fonts": "subfont build --in-place --harfbuzz --no-fallbacks --font-display block --recursive",
    "format": "prettier --write \"assets/**/*.js\" *.js \"assets/**/*.css\"",
    "lint": "prettier --check \"assets/**/*.js\" *.js \"assets/**/*.css\""
  },
  "dependencies": {
    "@11ty/eleventy-img": "^0.7.3",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "instant.page": "^5.1.0",
    "vanilla-lazyload": "^17.3.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "https://github.com/11ty/eleventy",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@snowpack/plugin-postcss": "^1.0.11",
    "@snowpack/plugin-run-script": "^2.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "autoprefixer": "^10.1.0",
    "cssnano": "^4.1.10",
    "eleventy-plugin-helmet": "^0.2.1",
    "hasha": "^5.2.2",
    "html-minifier": "^4.0.0",
    "markdown-it-implicit-figures": "^0.10.0",
    "netlify-plugin-cache": "^1.0.3",
    "postcss": "^8.2.2",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "prettier": "^2.0.5",
    "sharp": "^0.27.0",
    "snowpack": "^2.18.5",
    "subfont": "^5.2.5",
    "tailwindcss": "^2.0.2"
  }
}
